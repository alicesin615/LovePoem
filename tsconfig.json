{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "paths": {
      "@tableland/sdk/helpers": [
        "./node_modules/@tableland/sdk/dist/esm/helpers"
      ]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "scripts/v2/*.ts",
    "utils/*.ts",
    "tasks/",
    "contracts/*.sol",
    "typechain-types",
    "test/v2/*.spec.ts",
    "test/random-numbers/",
    "helper-hardhat-config.ts"
  ],
  "files": ["hardhat.config.ts"]
}
