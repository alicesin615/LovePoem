{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true
  },
  "exclude": ["node_modules"],
  "include": ["scripts/v2/*.ts", "contracts/*.sol", "typechain"],
  "files": ["./hardhat.config.ts"]
}
